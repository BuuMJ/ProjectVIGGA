<div class="main-department">
  <div class="header-department">
    <h1 class="department-text">Create Department</h1>
  </div>
    <form id="form-create-department" method="POST" action="/managements/storeDepartment">
        <div class="department-create">
            <div class="department-create__info">
                <label for="name">Name Department</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Just enter the name of the Department you need to create" required="" oninvalid="this.setCustomValidity('Please Enter New Department, just enter the name of the Department you need to create')" oninput="setCustomValidity('')" />
            </div>
            <div class="department-edit__btn">
                <a class="btn-department-back" href="/managements/Department">Back</a>
                <button class="btn-department-create">Create</button>
            </div>
        </div>
    </form>
</div>
<script>
var formCreateDepartment = document.getElementById('form-create-department');
var submitDepartment = document.querySelector('.btn-department-create');

submitDepartment.addEventListener('click', function(event) {
  event.preventDefault();
  if (confirm('you have to create more QA coordinator for this department, do you agree?')) {
    formCreateDepartment.submit();
  } else {
    return false;
  }
});
</script>