<div class="main-create-idea">
    <h1 class="create-idea-text">Add idea</h1>
    <form id="form-create-idea" method="POST" action="/staffsubmission/idea/storeIdea" enctype="multipart/form-data">
        <div class="create-idea">
            <div class="create-idea__info">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" required="" oninvalid="this.setCustomValidity('Please Enter Tilte')" oninput="setCustomValidity('')">
            </div>
            <div class="create-idea__info textarea-content">
                <label for="content">Content</label>
                <textarea type="text" class="form-control" id="content" name="content" required="" oninvalid="this.setCustomValidity('Please Enter New Content')" oninput="setCustomValidity('')"></textarea>
            </div>
            <div class="create-idea__info">
                <label for="file">File</label>
                <input type="file" class="form-control" id="file" name="file">
            </div>
            <div class="create-idea__info">
                <label for="category">Category</label>
                <select name="category" id="category" required="" oninvalid="this.setCustomValidity('Please Choose Category')" oninput="setCustomValidity('')">
                <option value="">Choose</option>
                {{#each dataC}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
                </select>
            </div>
            <div class="check_info">
                <input type="checkbox" name="check" id="check" required="" oninvalid="this.setCustomValidity('Make sure you follow the terms of posting ideas because you can\'t delete them when you post them, tick here if you\'re sure.')" oninput="setCustomValidity('')"> 
                <label for="check">I agree with this terms</label>
            </div>
            <div class="create-idea-edit__btn">
                <a type="button" class="btn-create-idea-back" href="/staffsubmission/{{submission._id}}">Back</a>
                <button type="submit" class="btn-create-idea-create">Create</button>
            </div>
        </div>
    </form>
</div>