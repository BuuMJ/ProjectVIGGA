<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card card-login">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block bg-img">
              <img src="/img/bglogin.avif"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                <form method="POST" action="/apilogin">
                  <div class="d-flex align-items-center mb-3 pb-1">
                    <span class="h1 fw-bold mb-0">Vigga Ielts</span>
                  </div>
                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>
                  <div class="form-outline mb-4">
                    <label for="user">User Name</label>
                    <div>
                      {{#if msg}}<p class="login-error">{{msg}}</p>{{/if}}
                      <input id="user" name="username" type="user" placeholder="lethanhhoang" oninput="checkValue()" />
                    </div>
                  </div>
                  <div class="form-outline mb-4">
                    <label for="password">Password</label>
                    <div>
                      <input id="password" name="password" type="password" oninput="checkValue()" />
                    </div>
                  </div>
                  <div class="pt-1 mb-4">
                    <button class="btn-login" type="submit"> Login </button>
                  </div>
                  <a class="small text-muted" href="#!">Forgot password?</a>
                  <p class="mb-5 pb-lg-2"">Don't have an
                    account?
                    <a href="/register"">Register here</a>
                  </p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="../../public/javascript/login.js"></script>