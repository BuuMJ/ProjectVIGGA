<div class="add__user vh-100">
    <form method="post" action="/register/apiregister" class="create__card" >
     <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-white">Create Form</h3>
      <div class="form-group">
      <label for="inputEmail4">Email</label>
      <input name="adremail" type="email" class="type_email" id="inputEmail4" placeholder="Email" >
     </div>
     <div class="form-group">
      <label for="inputPassword4">Password</label>
      <input name="password" type="password" class="type_password" id="inputPassword4" placeholder="Password" >
      </div>
      <div class="form-group">
      <label for="inputName">User name</label>
      <input name="username" type="text" class="type_name" id="inputName" placeholder="Hoang12345" >
     </div>
     <div class="form-group">
      <label for="inputFullname">Full name</label>
      <input name="fullname" type="text" class="type_fullName" id="inputFullname" placeholder="Le Thanh hoang">
     </div>
     <div class="form-group">
      <label for="inputState">Role</label>
      <select name="role" id="inputState" class="type__select">
        <option selected>Choose...</option>
        <option value="admin">Admin</option>
        <option value="user">User</option>
        <option value="coordinator">Coordinator</option>
        <option value="manager">Manager</option>
      </select>
      
      </div>
      <button id="btn-user" type="submit" class="button__user">Add</button>
     </form>  
        {{#each account}}
        <div class="card-user">
           <img src="img.jpg" alt="user" style="width:100%">
           <h1>{{this.fullname}}</h1>
            <h2>{{this.username}}</h2>
           <p class="title">{{this.role}}</p>
           <p>{{this.email}}</p>
           <a href="#"><i class="fa fa-dribbble"></i></a>
           <a href="#"><i class="fa fa-twitter"></i></a>
           <a href="#"><i class="fa fa-linkedin"></i></a>
           <a href="#"><i class="fa fa-facebook"></i></a>
           <p><button>Edit</button></p>
           <p><button>Remove</button></p>
</div>  
        {{/each}}       
     
    </div>
    
</div>




<script src="/javascript/user.js"></script>